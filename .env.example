# Configuration générale de l'application
APP_NAME="Mon Projet"
APP_URL="http://localhost:3000"
APP_DEBUG=true

# Configuration du formulaire de contact
HONEYPOT_FIELD="honeypot"
MAX_EMAILS_PER_HOUR=10
MAX_FILE_SIZE=5242880
MAX_FILES=3
ALLOWED_FILE_TYPES="application/pdf,image/jpeg,image/png,image/gif,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Configuration du serveur SMTP
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE="tls"
SMTP_USERNAME="votre-email@example.com"
SMTP_PASSWORD="votre-mot-de-passe"

# Configuration des emails
MAIL_FROM="contact@exemple.com"
MAIL_FROM_NAME="Mon Projet"
MAIL_TO="admin@exemple.com"
MAIL_REPLY_TO="no-reply@exemple.com" 

# Configuration FTP
FTP_HOST=nom-serveur-ftp
FTP_USER=nom-utilisateur
FTP_PASSWORD=mot-de-passe
FTP_REMOTE_PATH=/sites/nom-du-site/
FTP_SECURE=false 